{
    "extends": ["eslint:recommended", "prettier", "prettier/react"],
    "plugins": ["react/recommended", "react-hooks"],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "no-console": "off",
        "quotes": [2, "single", { "avoidEscape": true }],
        "react-hooks/rules-of-hooks": "error"
    }
}
